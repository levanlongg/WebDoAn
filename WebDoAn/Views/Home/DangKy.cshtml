@model WebDoAn.Models.ThanhVien

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}
<h2 style="text-align:center;color:red;margin-top:-5%"><b>Đăng ký tài khoản</b></h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <hr />
        <div class="row">
            <div class="col-md-2" style="text-align:right"><b>Tên tài khoản:</b></div>
            <div class="col-md-4">
                <input type="text" name="TaiKhoan" style="width:100%" placeholder="Tên tài khoản" />
            </div>
            <div class="col-md-2" style="text-align:right"><b>Mật khẩu:</b></div>
            <div class="col-md-4">
                <input type="password" name="MatKhau" style="width:100%" placeholder="Mật khẩu" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2" style="text-align:right"><b>Họ tên:</b></div>
            <div class="col-md-4">
                <input type="text" name="HoTen" style="width:100%" placeholder="Họ tên" />
            </div>
            <div class="col-md-2" style="text-align:right"><b>Địa chỉ:</b></div>
            <div class="col-md-4">
                <input type="text" name="DiaChi" style="width:100%" placeholder="Địa chỉ" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2" style="text-align:right"><b>Email:</b></div>
            <div class="col-md-4">
                <input type="email" name="Email" style="width:100%" placeholder="abc@gmail.com" />
            </div>
            <div class="col-md-2" style="text-align:right"><b>Số điện thoại:</b></div>
            <div class="col-md-4">
                <input type="number" name="SoDienThoai" style="width:100%; height:100%" placeholder="Số điện thoại" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2"></div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Đăng ký" class="btn btn-default"/>
                    </div>
                </div>
        </div>
    </div>
}
<hr />
<br /><br />


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
