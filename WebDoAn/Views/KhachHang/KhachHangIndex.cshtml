@model IEnumerable<WebDoAn.Models.KhachHang>

@{
    ViewBag.Title = "KhachHangController";
}
<h1 style="margin-top:-3%">Quản lý thông tin khách hàng</h1>
<button>
    @Html.ActionLink("Thêm mới", "Create")
</button>
<body>

    <div class="container-fluid">
        <table class="table table-bordered table-striped">
            <tr>
                <th style="width:7%">Mã KH</th>
                <th>
                  Tên khách hàng 
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DiaChi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SoDienThoai)
                </th>
               
                <th>
                    Tác vụ
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaKH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenKH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaChi)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.SoDienThoai)
                    </td>
                    
                    <td style="width:15%">
                        <button> @Html.ActionLink("Xem", "Edit", new { id = item.MaKH }) </button>
                        <button> @Html.ActionLink("Sửa", "Details", new { id = item.MaKH })</button>
                        <button> @Html.ActionLink("Xóa", "Delete", new { id = item.MaKH })</button>
                    </td>
                </tr>
            }

        </table>
    </div>
</body>
