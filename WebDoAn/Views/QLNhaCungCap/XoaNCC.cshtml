@model WebDoAn.Models.NhaCungCap

@{
    ViewBag.Title = "XoaNCC";
    Layout = "~/Views/Layout/AdminLayoutNVQLK.cshtml";
}

<h2 style="text-align:center;color:red"><b>Xóa nhà cung cấp</b></h2>

<h3>Are you sure you want to delete this?</h3>
<div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        <table>
            <tr>
                <th style="width:10% !important">Mã NCC:</th>
                <td>@Html.DisplayFor(model => model.MaNCC)</td>
            </tr>
            <tr>
                <th>Tên NCC:</th>
                <td>@Html.DisplayFor(model => model.TenNCC)</td>
            </tr>
            <tr>
                <th>Địa chỉ:</th>
                <td>@Html.DisplayFor(model => model.DiaChi)</td>
            </tr>
            <tr>
                <th>Email:</th>
                <td>@Html.DisplayFor(model => model.Email)</td>
            </tr>
            <tr>
                <th>Số điện thoại:</th>
                <td>@Html.DisplayFor(model => model.MaNCC)</td>
            </tr>
            <tr>
                <th>Số fax:</th>
                <td>@Html.DisplayFor(model => model.Fax)</td>
            </tr>
        </table>
        <div class="form-group">
            <p>
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Delete" class="btn btn-success" />
                </div>
            </p>
        </div>
    </div>
}
</div>