@using WebDoAn.Models;
@model SanPham

@{
    ViewBag.Title = "ThemMoi";
    Layout = "~/Views/Layout/AdminLayoutNVQLK.cshtml";
}

<h2 style="text-align:center;color:red"><b>Thêm sản phẩm</b></h2>
<div>
    @using (Html.BeginForm("ThemMoi1", "QuanLySanPham", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-2" style="text-align:right"><b>Tên sản phẩm:</b></div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2" style="text-align:right"><b>Hình ảnh:</b></div>
                <div class="col-md-4">
                    <input name="HinhAnh" type="file" />
                    <span style="color:red">@ViewBag.upload</span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2" style="text-align:right"><b>Mô tả ngắn:</b></div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2" style="text-align:right"><b>Mô tả chi tiết:</b></div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MoTaCT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MoTaCT, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2" style="text-align:right"><b>Đặc điểm:</b></div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DacDiem, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DacDiem, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2" style="text-align:right"><b>Đơn Giá:</b></div>
                <div class="col-md-2">
                    @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2" style="text-align:right"><b>Số lượng tồn:</b></div>
                <div class="col-md-2">
                    @Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoLuongTon, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2" style="text-align:right"><b>Nhà cung cấp:</b></div>
                <div class="col-md-2">
                    @Html.DropDownList("MaNCC", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaNCC, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2" style="text-align:right"><b>Lượt xem:</b></div>
                <div class="col-md-2">
                    @Html.EditorFor(model => model.LuotXem, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LuotXem, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2" style="text-align:right"><b>Lượt bình chọn:</b></div>
                <div class="col-md-2">
                    @Html.EditorFor(model => model.LuotBinhChon, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LuotBinhChon, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2" style="text-align:right"><b>Lượt bình luận:</b></div>
                <div class="col-md-2">
                    @Html.EditorFor(model => model.Luot_BinhLuan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Luot_BinhLuan, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2" style="text-align:right"><b>Số lần mua:</b></div>
                <div class="col-md-2">
                    @Html.EditorFor(model => model.SoLanMua, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoLanMua, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2" style="text-align:right"><b>Mới:</b></div>
                <div class="col-md-2">
                    @Html.EditorFor(model => model.Moi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Moi, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2" style="text-align:right"><b>Mã loại sản phẩm:</b></div>
                <div class="col-md-2">
                    @Html.EditorFor(model => model.MaLoaiSP, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaLoaiSP, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="form-group">
                <div class="col-md-2" style="text-align:right"><b>Nhà sản xuất:</b></div>
                <div class="col-md-2">
                    @Html.DropDownList("MaNSX", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaNSX, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2" style="text-align:right"><b>Đã xóa:</b></div>
                <div class="col-md-2">
                    <div>
                        @Html.EditorFor(model => model.DaXoa)
                        @Html.ValidationMessageFor(model => model.DaXoa, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>

    }
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
