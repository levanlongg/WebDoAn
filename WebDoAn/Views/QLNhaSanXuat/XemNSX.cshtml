@model WebDoAn.Models.NhaSanXuat

@{
    ViewBag.Title = "XemNSX";
    Layout = "~/Views/Layout/AdminLayoutNVQLK.cshtml";
}

<h2 style="text-align:center;color:red"><b>Xem chi tiết nhà sản xuất</b></h2>

<div>
    <hr />
    <table>
        <tr>
            <th style="width:10% !important">Mã NSX:</th>
            <td>@Html.DisplayFor(model => model.MaNSX)</td>
        </tr>
        <tr>
            <th>Tên NSX:</th>
            <td>@Html.DisplayFor(model => model.TenNSX)</td>
        </tr>
        <tr>
            <th>Địa chỉ:</th>
            <td>@Html.DisplayFor(model => model.DiaChi)</td>
        </tr>
        <tr>
            <th>Email:</th>
            <td>@Html.DisplayFor(model => model.Email)</td>
        </tr>
        <tr>
            <th>Số điện thoại:</th>
            <td>@Html.DisplayFor(model => model.SoDienThoai)</td>
        </tr>
        <tr>
            <th>Số fax:</th>
            <td>@Html.DisplayFor(model => model.SoFax)</td>
        </tr>
    </table>
    <br />
    <div>
        <p>
            <a href="@Url.Action("SuaNSX","QLNhaSanXuat",new {id=Model.MaNSX})"><input type="button" value="Chỉnh sửa" class="btn btn-success" /></a>
        </p>
    </div>
</div>
