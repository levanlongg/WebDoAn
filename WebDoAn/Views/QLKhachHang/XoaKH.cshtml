@model WebDoAn.Models.KhachHang

@{
    ViewBag.Title = "XoaKH";
    Layout = "~/Views/Layout/AdminLayoutNVBH.cshtml";
}

<h2 style="text-align:center;color:red"><b>Xóa khách hàng</b></h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            <table>
                <tr>
                    <th style="width:10% !important">Mã KH:</th>
                    <td>@Html.DisplayFor(model => model.MaKH)</td>
                </tr>
                <tr>
                    <th>Tên khách hàng:</th>
                    <td>@Html.DisplayFor(model => model.TenKH)</td>
                </tr>
                <tr>
                    <th>Địa chỉ:</th>
                    <td>@Html.DisplayFor(model => model.DiaChi)</td>
                </tr>
                <tr>
                    <th>Email:</th>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
                <tr>
                    <th>Số điện thoại:</th>
                    <td>@Html.DisplayFor(model => model.SoDienThoai)</td>
                </tr>
                <tr>
                    <th>Mã thành viên:</th>
                    <td>@Html.DisplayFor(model => model.ThanhVien.MaThanhVien)</td>
                </tr>
            </table>
            <br/>
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> 
            </div>
        </div>
    }
</div>
<br/><br/>
