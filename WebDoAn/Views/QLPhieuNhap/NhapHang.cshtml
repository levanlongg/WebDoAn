@using WebDoAn.Models;
@model  PhieuNhap

@{
    ViewBag.Title = "NhapHang";
    Layout = "~/Views/Layout/AdminLayoutNVQLK.cshtml";
}

<h2 style="text-align:center;color:red"><b>Nhập hàng</b></h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-2" style="text-align:right"><b>Tên nhà cung cấp:</b></div>
            <div class="col-md-6">
                @Html.DropDownList("MaNCC", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaNCC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2" style="text-align:right"><b>Ngày nhập:</b></div>
            <div class="col-md-2">
                @Html.EditorFor(model => model.NgayNhap, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgayNhap, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2" style="text-align:right"><b>Đã xóa:</b></div>
            <div class="col-md-2">
                <div class="checkbox">
                    @Html.EditorFor(model => model.DaXoa)
                    @Html.ValidationMessageFor(model => model.DaXoa, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br/>
        <table class="table tblChiTietPhieuNhap">
            @{ 
                IEnumerable<SanPham> listSanPham = ViewBag.ListSanPham as IEnumerable<SanPham>;
             }
            <tr class="trAppend">
                <td></td>
            </tr>
        </table>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="+" class="btn btn-success" />
                <input type="submit" value="Nhập hàng" class="btn btn-default" />
            </div>
        </div>
    </div>
                }



<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
