@model WebDoAn.Models.ThanhVien

@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}
<h2 style="text-align:center;color:red;margin-top:-5%"><b>Đăng nhập quản lý thông tin</b></h2>
@using (Html.BeginForm())
{
    <hr />
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <b>Tên tài khoản:</b>
                <input type="text" name="name" style="width:100%" placeholder="Tên tài khoản" />
            </div>
            <div class="col-md-3"></div>
        </div>
        <br/>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <b>Mật khẩu:</b>
                <input type="password" name="password" style="width:100%" placeholder="Mật khẩu" />
            </div>
            <div class="col-md-3"></div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-3"></div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Đăng nhập " class="btn btn-default" />
                </div>
            </div>
        </div>
}
<hr />
<br /><br />


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
