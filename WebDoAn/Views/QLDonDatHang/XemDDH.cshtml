@model WebDoAn.Models.DonDatHang

@{
    ViewBag.Title = "XemDDH";
    Layout = "~/Views/Layout/AdminLayoutNVBH.cshtml";
}

<h2 style="text-align:center;color:red"><b>Xem đơn đặt hàng</b></h2>

<div>
    <hr />
    <table>
        <tr>
            <th style="width:10% !important">Mã DDH:</th>
            <td>@Html.DisplayFor(model => model.MaDDH)</td>
        </tr>
        <tr>
            <th>Ngày đặt:</th>
            <td>@Html.DisplayFor(model => model.NgayDat)</td>
        </tr>
        <tr>
            <th>Tình trạng giao hàng:</th>
            <td>@Html.DisplayFor(model => model.TinhTrangGiaoHang)</td>
        </tr>
        <tr>
            <th>Ngày giao:</th>
            <td>@Html.DisplayFor(model => model.NgayGiao)</td>
        </tr>
        <tr>
            <th>Đã thanh toán:</th>
            <td>@Html.DisplayFor(model => model.DaThanhToan)</td>
        </tr>
        <tr>
            <th>Mã khách hàng:</th>
            <td>@Html.DisplayFor(model => model.MaKH)</td>
        </tr>
        <tr>
            <th>Ưu đãi:</th>
            <td>@Html.DisplayFor(model => model.UuDai)</td>
        </tr>
    </table>
    <br />
    <div>
        <p>
            <a href="@Url.Action("XoaDDH","QLDonDatHang")"><input type="button" value="Xóa" class="btn btn-success" /></a>
        </p>
    </div>
</div>
